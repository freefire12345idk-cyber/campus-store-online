# Performance & Scaling Configuration
# Optimized for 5K-10K concurrent users

# Database Connection Pool
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_API=300000      # 5 minutes for API responses
CACHE_TTL_STATIC=86400000 # 24 hours for static data
CACHE_MAX_SIZE=1000

# CDN Configuration
CDN_CACHE_DURATION=31536000  # 1 year
STATIC_CACHE_DURATION=2592000 # 30 days

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
LOG_SLOW_QUERIES=true
QUERY_TIMEOUT_MS=1000

# Horizontal Scaling
ENABLE_SERVERLESS=true
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT_MS=30000

# Compression
ENABLE_GZIP=true
ENABLE_BROTLI=true

# Security Headers
ENABLE_SECURITY_HEADERS=true
CORS_MAX_AGE=86400

# Image Optimization
IMAGE_QUALITY=75
IMAGE_FORMATS=webp,avif
IMAGE_MAX_WIDTH=1920
